clear      lock
clear   control
clear      mod1
clear      mod2
clear      mod3
clear      mod4
clear      mod5
!! Caps_Lock key gives you Hyper_L
keycode      66 = Control_L
keycode      37 = Hyper_L
!! keycode      66 = Hyper_L
keycode     108 = Alt_R
keycode     105 = Control_R
!! if you want Caps_Lock setxkbmap set it to both ~shift~ keys
!! keycode     127 = Caps_Lock
!! keycode     127 = Shift_Lock NoSymbol
add     control = Control_L Control_R
add        mod1 = Alt_L Alt_R Meta_L
add        mod2 = Num_Lock
add        mod3 = Hyper_L
add        mod4 = Super_L Super_R
add        mod5 = Mode_switch ISO_Level3_Shift

keycode  10 =            exclam 1 exclam           1
keycode  11 =            at 2 at                   2
keycode  12 =            numbersign 3 numbersign   3
keycode  13 =            dollar 4 dollar           4
keycode  14 =            percent 5 percent         5
keycode  15 =            asciicircum 6 asciicircum 6
keycode  16 =            ampersand 7 ampersand     7
keycode  17 =            asterisk 8 asterisk       8
keycode  18 =            parenleft 9 parenleft     9
keycode  19 =            parenright 0 parenright   0

!! keycode  34 = bracketleft braceleft bracketleft braceleft
!! keycode  35 = bracketright braceright bracketright braceright

keycode  49 = asciitilde grave asciitilde grave
